@model DoAn1.App_Data.KhachHang

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/BookEditStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <ul>
        <li><a href="#home">Logo</a></li>
        <li class="Login"><a href="#contact"><i class="material-icons">face</i>ADMIN1</a></li>
        <h5> Login in as: </a></h5>
    </ul>
</head>
<body>
    <form method="post" enctype="multipart/form-data">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TaiKhoan)
        <table align="center">
            <tr>
                <th>Mật khẩu:</th>
                <td>
                    <div class="form-group">
                        <div>
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Tên:</th>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Số điện thoại:</th>
                <td>
                    <div class="form-group">

                        <div>
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Giới tính:</th>
                <td>
                    <div class="form-group">

                        <div>
                            @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Ngày sinh:</th>
                <td>
                    <div class="form-group">
                        <div>
                            <input type="date" value="@Model.NgaySinh" name="NgaySinh" />
                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <div style="text-align:center"><button type="submit" value="Edit" id="create-btn">Xác nhận</button></div>
        <div class="warning-text">@ViewBag.Messenge</div>
    </form>

</body>
</html>
