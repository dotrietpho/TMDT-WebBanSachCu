@model DoAn1.App_Data.Sach
@{
    ViewBag.Title = "Sửa Sách";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-5">

    <!-- Heading -->
    <div class="card mb-4 wow fadeIn">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

            <h4 class="mb-2 mb-sm-0 pt-1">
                <a href="@Url.Action("Index", "Book")"><i class="fas fa-home"></i></a>
                <span>/</span>
                <a href="@Url.Action("Index", "Book")">Quản lý Sách</a>
                <span>/</span>
                <span>@ViewBag.Title</span>
            </h4>
        </div>
    </div>
    <!-- Heading -->

    <div class="col-md-8 offset-2">
        <form class="border border-light p-5" method="post" enctype="multipart/form-data">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <p class="h4 mb-4 text-center">@ViewBag.Title</p>

            <label for="TenSach">Tên Sách:</label>
            @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control mb-4", @name = "TenSach", @id = "TenSach" } })
            @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })

            <label for="ChuDe">Thể loại:</label>
            <select class="browser-default custom-select mb-4" id="ChuDe" name="ChuDe">
                <option value="Truyện trinh thám" selected="@(Model.ChuDe == "Truyện trinh thám")">Truyện trinh thám</option>
                <option value="Truyện ngôn tình" selected="@(Model.ChuDe == "Truyện ngôn tình")">Truyện ngôn tình</option>
                <option value="Sách song ngữ" selected="@(Model.ChuDe == "Sách song ngữ")">Sách song ngữ</option>
                <option value="Sách khoa học" selected="@(Model.ChuDe == "Sách khoa học")">Sách khoa học</option>
                <option value="Truyện khoa học viễn tưởng" selected="@(Model.ChuDe == "Truyện khoa học viễn tưởng")">Truyện khoa học viễn tưởng</option>
                <option value="Sách dạy nấu ăn" selected="@(Model.ChuDe == "Sách dạy nấu ăn")">Sách dạy nấu ăn</option>
                <option value="Truyện thiếu nhi" selected="@(Model.ChuDe == "Truyện thiếu nhi")">Truyện thiếu nhi</option>
                <option value="Văn học nước ngoài" selected="@(Model.ChuDe == "Văn học nước ngoài")">Văn học nước ngoài</option>
                <option value="Sách giáo khoa" selected="@(Model.ChuDe == "Sách giáo khoa")">Sách giáo khoa</option>
                <option value="Tập tô màu" selected="@(Model.ChuDe == "Tập tô màu")">Tập tô màu</option>
            </select>

            <label for="GiaSach">Giá (vnđ):</label>
            @Html.EditorFor(model => model.GiaSach, new { htmlAttributes = new { @id = "GiaSach", @name = "GiaSach", @class = "form-control mb-4" } })
            @Html.ValidationMessageFor(model => model.GiaSach, "", new { @class = "text-danger" })

            <label for="SoTrang">Số trang:</label>
            @Html.EditorFor(model => model.SoTrang, new { htmlAttributes = new { @id = "SoTrang", @name = "SoTrang", @class = "form-control mb-4" } })
            @Html.ValidationMessageFor(model => model.SoTrang, "", new { @class = "text-danger" })

            <label for="MoTa">Mô tả:</label>
            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @id = "MoTa", @name = "MoTa", @class = "form-control mb-4" } })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })

            <label for="TenTacGia">Tác giả:</label>
            @Html.EditorFor(model => model.TenTacGia, new { htmlAttributes = new { @id = "TenTacGia", @name = "TenTacGia", @class = "form-control mb-4" } })
            @Html.ValidationMessageFor(model => model.TenTacGia, "", new { @class = "text-danger" })

            <label for="file">Hình ảnh:</label>

            <div class="text-center mb-4">
                <img style="max-width:150px;max-height:150px" src="@Url.Content("~/UploadedFiles/"+Model.HinhSach)" />
            </div>
            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="file" name="file" aria-describedby="file">
                    <label class="custom-file-label" for="file">Chọn hình ảnh</label>
                </div>
            </div>

            <button class="btn btn-info btn-block" type="submit" value="Edit" id="create-btn">Xác nhận</button>

            <div class="warning-text">@ViewBag.Messenge</div>
        </form>
    </div>
</div>