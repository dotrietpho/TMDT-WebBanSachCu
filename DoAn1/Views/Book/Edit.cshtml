@model DoAn1.App_Data.Sach

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/BookEditStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <ul>
        <li><a href="#home">Logo</a></li>
        <li class="Login"><a href="#contact"><i class="material-icons">face</i>ADMIN1</a></li>
        <h5> Login in as: </a></h5>
    </ul>
</head>
<body>
    <form method="post" enctype="multipart/form-data">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <table align="center">
            <tr>
                <th>Tên sách:</th>
                <td>
                    <div class="form-group">
                        <div >
                            @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Giá (vnđ):</th>
                <td><div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GiaSach, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GiaSach, "", new { @class = "text-danger" })
                    </div>
                </div></td>
            </tr>
            <tr>
                <th>Số trang:</th>
                <td>
                    <div class="form-group">
                       
                        <div >
                            @Html.EditorFor(model => model.SoTrang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoTrang, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Mô tả:</th>
                <td><div class="form-group">

                    <div>
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>
                </td>
            </tr>
            <tr>
                <th>Tác giả:</th>
                <td>
                    <div class="form-group">
                
                        <div >
                            @Html.EditorFor(model => model.TenTacGia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenTacGia, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Hình ảnh:</th>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <img style="width:150px;height:150px" src="@Url.Content("~/UploadedFiles/"+Model.HinhSach )"/>
                            <input type="file" name="file" id="file">
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <div style="text-align:center"><button type="submit" value="Edit" id="create-btn">Xác nhận</button></div>
        <div class="warning-text">@ViewBag.Messenge</div>
    </form>
       
</body>
</html>
