@model ReBook.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/Content/userinfo.css" rel="stylesheet" />
</head>
<body>
    <div class="warning-text">@ViewBag.Messenge</div>
    <div class="title text-center" style="font-size: 50px; margin:40px 0 40px 0">ĐỔI MẬT KHẨU</div>

    @using (Html.BeginForm())
    {
        <div class="row text-center">
            <input name="MatKhau" type="password" class="registerTerm" style="background:none;" placeholder="Vui lòng nhập mật khẩu cũ" value="@Model.MatKhau" />
        </div>
        <br>
        <div class="row text-center">
            <input name="MatKhauMoi" type="password" class="registerTerm " style="background:none;" placeholder="Nhập mật khẩu mới" value="@Model.MatKhauMoi" />
        </div>
        <br>
        <div class="row text-center">
            <input name="MatKhauMoiNhapLai" type="password" class="registerTerm" style="background:none;" placeholder="Nhập lại mật khẩu mới" value="@Model.MatKhauMoiNhapLai" />
        </div>
        <br> <br>
        <input class="user-btn" type="submit" style="font-weight:bold; font-size:19px" value="Đổi mật khẩu" />
    }

    @if (ViewBag.Message != null)
    {
        <div class="row text-center">

            <label class="alert @(ViewBag.MessageType == "Success" ? "alert-success" : "alert-warning")">@ViewBag.Message</label>
        </div>
    }
</body>
