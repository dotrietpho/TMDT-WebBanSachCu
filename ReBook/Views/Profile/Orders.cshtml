
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center" style="margin:40px 0 40px 0">
    <h1><b>LỊCH SỬ ĐƠN HÀNG</b></h1>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 15%">Số điện thoại</th>
                <th style="width: 30%">Đia chỉ giao hàng</th>
                <th style="width: 20%">Ghi chú</th>
                <th style="width: 15%">Tổng tiền</th>
                <th style="width: 20%">Tình trạng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["Orders"] as List<ReBook.App_Data.HoaDon>)
            {
                <tr>
                    <td>
                        @item.SDTGiaoHang
                    </td>
                    <td>
                        @item.DiaChiGiaoHang
                    </td>
                    <td>
                        @item.GhiChu
                    </td>
                    <td>
                        @item.TongTien
                    </td>
                    <td>
                        @item.TinhTrang
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>