@model ReBook.App_Data.HoaDon

@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/Content/register.css" rel="stylesheet" />
</head>

@using (Html.BeginForm())
{
<br>
<br>
<br>
<br />
<br />
<br />
