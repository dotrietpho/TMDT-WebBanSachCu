@model PagedList.IPagedList<ReBook.App_Data.Banner>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản lý Quảng cáo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-5">

    <!-- Heading -->
    <div class="card mb-4 wow fadeIn">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

            <h4 class="mb-2 mb-sm-0 pt-1">
                <a href="@Url.Action("Index", "Banner")"><i class="fas fa-home"></i></a>
                <span>/</span>
                <span>@ViewBag.Title</span>
            </h4>
        </div>
    </div>
    <!-- Heading -->

    <div class="warning-text mb-4">@ViewBag.Messenge</div>

    <!--Grid row-->
    <div class="row wow fadeIn">

        <!--Grid column-->
        <div class="col-md-12 mb-4">

            <!--Card-->
            <div class="card">

                <!--Card content-->
                <div class="card-body">

                    <!-- Table  -->
                    <table class="table table-hover">
                        <!-- Table head -->
                        <thead class="blue-grey lighten-4">
                            <tr>
                                <th>#</th>
                                <th>Mã banner</th>
                                <th>Hiển thị</th>
                                <th>Hình ảnh</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <!-- Table head -->
                        <!-- Table body -->
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                            <tr>
                                <th scope="row">@(i + 1)</th>
                                <td>
                                    @Html.DisplayFor(modelItem => Model[i].id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model[i].isHienThi)
                                </td>
                                <td>
                                    <img src="~/UploadedFiles/@Model[i].LinkAnh" width="120" />
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = Model[i].id }) |
                                    @Html.ActionLink("Xoá", "Delete", new { id = Model[i].id })
                                </td>
                            </tr>
                            }
                        </tbody>
                        <!-- Table body -->
                    </table>
                    <!-- Table  -->

                    <div class="paged-table">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
            </div>
            <!--/.Card-->
        </div>
        <!--Grid column-->
    </div>
    <!--Grid row-->
</div>